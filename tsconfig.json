{
  "compileOnSave": true,
  "watchOptions": {
    "watchDirectory": "usefsevents",
    "excludeDirectories": ["node_modules", "dist", "out"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "tools/*.js"
  ],
  "exclude": ["src/renderer/lib/*.js", "dist/", "node_modules/", "out/"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES6",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "allowJs": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "buildOptions": {
    "verbose": true,
    "traceResolution": true
  },
  "typeAcquisition": {
    "enable": true
  }
}
