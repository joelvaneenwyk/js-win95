# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Prettier
max_line_length = 85
quote_type = single

[*.{md,markdown}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[*.{less,css}]
indent_size = 2

[*.{html,htm}]
indent_size = 2
